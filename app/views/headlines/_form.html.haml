= form_for ([:page, @headline]) do |f|
  - if @headline.errors.any?
    #error_explanation
      %h2= "#{pluralize(@headline.errors.count, "error")} prohibited this headline from being saved:"
      %ul
        - @headline.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :title_type
    = f.number_field :title_type
  .actions
    = f.submit 'Save'
