= form_for ([:page, @button]) do |f|
  - if @button.errors.any?
    #error_explanation
      %h2= "#{pluralize(@button.errors.count, "Button error")} prohibited this button from being saved:"
      %ul
        - @button.errors.full_messages.each do |message|
          %li
            = message

  - if @section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@section.errors.count, "section error")} prohibited this section from being saved:"
      %ul
      - @section.errors.full_messages.each do |message|
        %li
          = message
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :button_type
    = f.number_field :button_type
  .actions
    = f.submit 'Save'
