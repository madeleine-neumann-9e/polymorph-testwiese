%h1 Listing buttons

%table
  %thead
    %tr
      %th Title
      %th Button type
      %th
      %th
      %th

  %tbody
    - @buttons.each do |button|
      %tr
        %td= button.title
        %td= button.button_type
        %td= link_to 'Edit', edit_page_button_path(button)
        %td= link_to 'Destroy', page_button(button), method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Button', new_page_button_path
